<h1 class="page-header">Login</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3 login-wrapper">
    <form action="/authenticate" method="post">
      <div class="form-group">
        <input type="email" name="email" placeholder="Email" class="form-control" required autofocus>
      </div>
      <div class="form-group">
        <input type="password" placeholder="Password" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary stretch">Log in</button>

      <p class="text-center">First time here? <a href="./signup">Sign up!</a></p>
    </form>
  </div>
</div>
